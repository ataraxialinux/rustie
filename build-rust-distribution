#!/bin/bash

set -e

clear_vendor_checksums() {
	sed -i 's/\("files":{\)[^}]*/\1/' vendor/$1/.cargo-checksum.json
}

mktoolchain() {
	case $1 in
		armv7)
			make $MKOPTS TARGET=armv7l-linux-musleabihf GCC_CONFIG="--with-arch=armv7-a --with-fpu=neon"
			make $MKOPTS OUTPUT="$TOOLS" TARGET=armv7l-linux-musleabihf GCC_CONFIG="--with-arch=armv7-a --with-fpu=neon" install
			;;
		arm)
			make $MKOPTS TARGET=arm-linux-musleabihf GCC_CONFIG="--with-arch=armv6 --with-fpu=vfp"
			make $MKOPTS OUTPUT="$TOOLS" TARGET=arm-linux-musleabihf GCC_CONFIG="--with-arch=armv6 --with-fpu=vfp" install
			;;
		*)
			make $MKOPTS TARGET=$i-linux-musl
			make $MKOPTS OUTPUT="$TOOLS" TARGET=$i-linux-musl install
			;;
	esac
}

export CWD="$(pwd)"
export STUFF="$CWD/stuff"
export OUT="$CWD/out"
export SRC="$OUT/src"
export TOOLS="$OUT/tools"

export RUSTVER="nightly"

export LC_ALL="POSIX"
export HOSTCC="gcc"
export HOSTCXX="g++"
export XHOST="$(echo ${MACHTYPE} | sed -e 's/-[^-]*/-cross/')"
export PATH="$TOOLS/bin:$SRC/bin:$PATH"

if [ -z $MKOPTS ]; then
	export MKJOBS="$(expr $(nproc) + 1)"
fi

export MAKEFLAGS="-j$MKJOBS"

if [ "$TOOLCHAIN" != "no" ]; then
	rm -rf $OUT
	mkdir -p $SRC $TOOLS

	cd $SRC
	git clone https://github.com/richfelker/musl-cross-make.git --depth 1
	cd musl-cross-make
	sed -i 's/sha1sum -c/true/g' Makefile

	for i in x86_64 aarch64 armv7 arm; do
		mktoolchain $i
	done

	cd $SRC
	wget https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-3.1.0.tar.gz
	tar -xvf libressl-3.1.0.tar.gz
	for i in x86_64-linux-musl aarch64-linux-musl armv7l-linux-musleabihf arm-linux-musleabihf; do
		case $i in
			arm*)
				asm="--disable-asm"
				;;
		esac

		cd $SRC/libressl-3.1.0
		mkdir build-$i
		cd build-$i
		CFLAGS="-fPIE -Os -g0 -s -pipe" \
		../configure \
			--build=$XHOST \
			--host=$i \
			--prefix="$TOOLS/$i" \
			--disable-shared $asm
		make $MKOPTS
		make $MKOPTS install
	done
fi

cd $SRC
wget https://static.rust-lang.org/dist/rustc-$RUSTVER-src.tar.gz
bsdtar -xvf rustc-$RUSTVER-src.tar.gz
cd rustc-$RUSTVER-src

patch -Np1 -i "$STUFF"/0001-Prefer-libgcc_eh-over-libunwind-for-musl.patch
patch -Np1 -i "$STUFF"/0002-linux-musl-disable-crt-static.patch

cat << EOF > config.toml
[llvm]
optimize = true
release-debuginfo = false
assertions = false
static-libstdcpp = true
ninja = true
targets = "AArch64;ARM;X86"

[build]
build = "x86_64-unknown-linux-musl"
host = [
  "x86_64-unknown-linux-musl",
  "aarch64-unknown-linux-musl",
  "armv7-unknown-linux-musleabihf",
  "arm-unknown-linux-musleabihf",
]
cargo = "$(which cargo)"
rustc = "$(which rustc)"
docs = false
compiler-docs  = false
extended = true
submodules = false
python = "python3"
locked-deps = true
vendor = true
cargo-native-static = true
sanitizers = false
profiler = false
full-bootstrap = false

[rust]
channel = "nightly"
rpath  = false
codegen-units = 1
debuginfo-level = 0
debug = false
backtrace = false
jemalloc = false
debug-assertions = false
codegen-tests = false
deny-warnings = false

[target.x86_64-unknown-linux-musl]
cc = "x86_64-linux-musl-gcc"
cxx = "x86_64-linux-musl-g++"
linker = "x86_64-linux-musl-gcc"
musl-root = "$TOOLS/x86_64-linux-musl"
crt-static = false

[target.aarch64-unknown-linux-musl]
cc = "aarch64-linux-musl-gcc"
cxx = "aarch64-linux-musl-g++"
linker = "aarch64-linux-musl-gcc"
musl-root = "$TOOLS/aarch64-linux-musl"
crt-static = false

[target.armv7-unknown-linux-musleabihf]
cc = "armv7l-linux-musleabihf-gcc"
cxx = "armv7l-linux-musleabihf-g++"
linker = "armv7l-linux-musleabihf-gcc"
musl-root = "$TOOLS/armv7l-linux-musleabihf"
crt-static = false

[target.arm-unknown-linux-musleabihf]
cc = "arm-linux-musleabihf-gcc"
cxx = "arm-linux-musleabihf-g++"
linker = "arm-linux-musleabihf-gcc"
musl-root = "$TOOLS/arm-linux-musleabihf"
crt-static = false
EOF

export RUST_BACKTRACE=1
export SSL_CERT_FILE="/etc/ssl/certs/ca-certificates.crt"
export X86_64_UNKNOWN_LINUX_MUSL_OPENSSL_DIR="$TOOLS/x86_64-linux-musl"
export AARCH64_UNKNOWN_LINUX_MUSL_OPENSSL_DIR="$TOOLS/aarch64-linux-musl"
export ARMV7_UNKNOWN_LINUX_MUSLEABIHF_OPENSSL_DIR="$TOOLS/armv7l-linux-musleabihf"
export ARM_UNKNOWN_LINUX_MUSLEABIHF_OPENSSL_DIR="$TOOLS/arm-linux-musleabihf"

./x.py dist -j$MKJOBS
